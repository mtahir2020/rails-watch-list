<div class="container text-center">
  <%# How to get grid items in center? %>
  <div class="container text-center my-5">
    <h2 class="pt-1 mb-4 text-white">My Movie Lists</h2>
    <div class="row gy-5">
      <% @lists.each do |list| %>
        <div class="col-lg-6 d-flex justify-content-center">
          <div class="card" style="width: 18rem;">
            <div class="design position-relative">
              <img src="<%=list.image_url%>" class="card-img-top" alt="<%=list.name%>">
              <div class="overlay position-absolute"></div>
            </div>
              <div class="card-body">
                <p class="card-text fs-5"><%= link_to list.name, list_path(list) %></p>
              </div>
          </div>
        </div>

      <% end %>
    </div>
  </div>


  <div class="d-flex flex-column align-items-center">
    <h2 class="text-white">Create New List</h2>

    <div class="form text-black">
    <%= simple_form_for(@list) do |f| %>
      <%= f.input :name %>
      <%= f.input :image_url %>
      <%= f.submit %>
    <% end %>
    </div>

    <%= link_to "See bookmarks", bookmarks_path%>
  </div>
</div>

