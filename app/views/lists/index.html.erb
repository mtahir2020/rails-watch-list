<div class="d-flex flex-column align-items-center justify-content-center py-5">

  <h1 CLASS="mb-5">YOUR LISTS</h3>
  <div id="grid">
    <% @lists.each do |list| %>
      <div class="grid-card">
        <div style="width: 18rem;">
          <div class=" design position-relative">
          <%# if statement for cloudinary image tag %>
            <% if list.photo.attached? == true %>
              <%= cl_image_tag list.photo.key, :width=>400, :height=>350, :crop=>"fill", alt: list.name %>
            <% else %>
              <img src="<%=list.image_url%>", width="400", height="350", alt="<%=list.name%>">
            <% end %>
            <div class="overlay position-absolute"></div>
          </div>

          <div class="card-textbox" style="background-color: rgba(253, 1, 80, 0.8)">
            <p class="card-text fs-5"><%= link_to list.name, list_path(list) %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>



  <div class="d-flex flex-column align-items-center">
    <h2 class="text-white">Create New List</h2>

    <div class="form text-black">
      <%= simple_form_for(@list) do |f| %>
        <%= f.input :name %>
        <%= f.input :photo, as: :file %>
        <%= f.submit %>
      <% end %>
    </div>

  </div>


